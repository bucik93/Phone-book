
@model IEnumerable<PhoneBook.Models.PersonModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kontakty</h2>

<p>
    @Html.ActionLink("Dodaj kontakt", "Create")
</p>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>


<form action="Index" method="post">
    <input type="text" name="search" />
    <button class="btn btn-default">Szukaj</button>

</form>


<div class="container">
    <div class="col-xs-4 col-sm-offset-4">
        @for (int i = 0; i < 9; i++)
        {
            if (ViewBag.PageNum == i)
            {
                <a class="btn btn-default active" href="@Url.Action("Index", new {page = i})">@i</a>
            }
            else
            {
                <a class="btn btn-default" href="@Url.Action("Index", new {page = i})">@i</a>

            }
        }

    </div>

</div>





<div class="panel panel-default panel-table">
    <div class="panel-body">

        <table class="table table-striped table-bordered table-list table table-hover">
            <tr>
                <th><em class="fa fa-cog"></em></th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
                <th>Usuń</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="btn btn-default" href="@Url.Action("Update", new { @class = "btn-default", id = item.ID })"><em class="fa fa-pencil"></em></a>
                        @*<a class="btn btn-default" href="@Url.Action("Edycja", "Update", new { @class = "btn-default", id = item.ID  })"><em class="fa fa-pencil"></em></a>*@
                        @*<a class="btn btn-danger" href="@Url.Action("Usuń", "Remove", new {@class = "btn-default", id = item.ID })"><em class="fa fa-trash"></em></a>*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edycja", "Update", new { id = item.ID }) |
                        @Html.ActionLink("Usuń", "Remove", new { id = item.ID })


                        @*@Html.ActionLink("Opis", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Opinia", "Index", "Reviews", new { id = item.ID }, null) |*@


                    </td>
                    <td>
                        <a class="btn btn-danger" href="@Url.Action("Remove", new { @class = "btn-default", id = item.ID })"><em class="fa fa-trash"></em></a>

                    </td>
                </tr>

            }
        </table>
        </div>
</div>





